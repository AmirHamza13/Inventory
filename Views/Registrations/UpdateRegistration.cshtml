@model Inventory.Models.Registration

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Registrations/_Layout.cshtml";
}

<h1>Edit User</h1>

<hr />
<div class="col-sm-12">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
